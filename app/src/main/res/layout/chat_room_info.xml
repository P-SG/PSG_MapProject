<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/chat_room_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_room_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/chat_room_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_room_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="떡볶이"
        android:textSize="16dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="28dp"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/chat_info_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="85dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/chat_room_users"
        app:layout_constraintTop_toBottomOf="@+id/chat_info_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_room_user_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여자"
        android:textSize="16dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginVertical="18dp"/>

    <TextView
        android:id="@+id/chat_room_user_count"
        app:layout_constraintTop_toBottomOf="@+id/chat_info_line"
        app:layout_constraintStart_toEndOf="@+id/chat_room_users"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(3/3)"
        android:textSize="16dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>