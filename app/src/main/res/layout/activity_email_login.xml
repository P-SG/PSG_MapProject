<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

  <TextView
      android:layout_width="80dp"
      android:layout_height="18dp"
      android:textSize="16dp"
      android:text="로그인 하기"
      android:layout_marginTop="15dp"
      android:textColor="#111111"
      android:layout_marginBottom="59dp"
      android:layout_gravity="center_horizontal"/>

  <TextView
      android:layout_width="80dp"
      android:layout_height="18dp"
      android:textSize="16dp"
      android:text="로그인 하고"
      android:textColor="#111111"
      android:layout_gravity="center_horizontal"/>
  <ImageView
      android:layout_width="92dp"
      android:layout_height="92dp"
      android:layout_gravity="center_horizontal"
      android:src="@drawable/shop"/>
  <TextView
      android:layout_width="149dp"
      android:layout_height="20dp"
      android:textSize="16dp"
      android:textColor="#111111"
      android:text="함께 포장마차 즐기기!"
      android:layout_gravity="center_horizontal"/>
  <LinearLayout
      android:layout_marginTop="72dp"
      android:layout_width="299dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="vertical">
    <TextView
        android:layout_width="42dp"
        android:layout_height="17dp"
        android:textSize="14dp"
        android:layout_marginLeft="14dp"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="이메일"/>
    <EditText
        android:id="@+id/email_login_id"
        android:layout_width="299dp"
        android:layout_height="37dp"
        android:layout_marginBottom="37dp"
        android:paddingLeft="10dp"
        android:background="@drawable/email_login_radius"/>
    <TextView
        android:layout_width="56dp"
        android:layout_height="17dp"
        android:layout_marginLeft="14dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#111111"
        android:layout_marginBottom="10dp"

        android:text="비밀번호"/>
    <EditText
        android:id="@+id/email_login__pw"
        android:layout_width="299dp"
        android:layout_height="37dp"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:background="@drawable/email_login_radius"/>
  </LinearLayout>

  <Button
      android:id="@+id/email_login_button"
      android:layout_marginTop="88dp"
      android:layout_width="140dp"
      android:layout_height="45dp"
      android:background="@drawable/email_login_button_radius"
      android:drawableLeft="@drawable/smile"
      android:drawablePadding="5dp"
      android:paddingLeft="20dp"
      android:gravity="left|center"
      android:layout_gravity="center_horizontal"
      android:text="로그인 하기"
      android:textColor="#ffffff"
      android:textSize="13dp"
      />

  <TextView
      android:id="@+id/find_email"
      android:layout_marginTop="34dp"
      android:layout_marginBottom="12dp"
      android:layout_width="71dp"
      android:layout_height="14dp"
      android:gravity="center"
      android:text="@string/find_email"
      android:textSize="12dp"
      android:layout_gravity="center"
      />
  <TextView
      android:id="@+id/find_pw"
      android:layout_width="71dp"
      android:layout_height="14dp"
      android:gravity="center"
      android:text="@string/find_pw"
      android:textSize="12dp"
      android:layout_gravity="center"
      />
</LinearLayout>